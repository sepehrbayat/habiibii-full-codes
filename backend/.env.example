# Application Configuration
APP_NAME="Habiibii - Multi-Vendor Platform"
APP_ENV=local
APP_KEY=base64:changeme
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000
APP_MODE=dev

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=multi_food_db
DB_USERNAME=root
DB_PASSWORD=rootpassword

# Cache & Queue
BROADCAST_DRIVER=log
CACHE_DRIVER=database
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Pusher Configuration
PUSHER_APP_ID=test
PUSHER_APP_KEY=test
PUSHER_APP_SECRET=test
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Payment Gateways - Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Payment Gateways - PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Payment Gateways - Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Payment Gateways - Paystack
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# Payment Gateways - Flutterwave
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_SECRET_KEY=

# Payment Gateways - Xendit
XENDIT_API_KEY=
XENDIT_CALLBACK_TOKEN=

# SMS & Communication - Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SMS & Communication - Firebase
FIREBASE_API_KEY=
FIREBASE_APP_ID=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_PROJECT_ID=

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_SERVICE_NAME=habiibii-backend
OTEL_ENVIRONMENT=development
OTEL_TEAM=development
OTEL_BEAUTY_BOOKING_ENABLED=true
OTEL_SAMPLING_RATE=1.0

# OpenTelemetry Exporters
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp
OTEL_PHP_AUTOLOAD_ENABLED=true
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development

# Google Maps & Location Services
GOOGLE_MAPS_API_KEY=

# Admin & Support Settings
ADMIN_EMAIL=admin@habiibii.com
SUPPORT_EMAIL=support@habiibii.com

# JWT & Authentication
JWT_SECRET=changeme_with_random_string

# File Upload Settings
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
